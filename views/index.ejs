        <!--Contacto-->
        <section class="bg-gray-100" id="contacto">
            <div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8 sm:py-24">
                <div class="max-w-xl mx-auto text-center">
                    <h2 class="text-4xl font-bold tracking-tight sm:text-5xl">
                    Contacto
                    </h2>
                </div>
            <div class="p-8 bg-white rounded-lg shadow-lg lg:p-12 lg:col-span-3 my-8">
                <form action="/send-email" method="POST" class="space-y-4" id="form">
                    <div>
                        <label class="sr-only" for="name">Nombre</label>
                        <input class="w-full p-3 border-2 text-sm border-gray-200 rounded-lg" placeholder="Nombre" type="text" id="name" name="name" />
                        <strong class="text-sm font-bold text-red-600"> </strong>
                    </div>
                    <div>
                        <label class="sr-only" for="email">Email</label>
                        <input class="w-full p-3 border-2 text-sm border-gray-200 rounded-lg" placeholder="Email" type="email" id="email" name="email"/>
                        <strong class="text-sm font-bold text-red-600	"> </strong>
                    </div>
                    <div>
                        <label class="sr-only" for="telefono">Telefono</label>
                        <input class="w-full p-3 border-2 text-sm border-gray-200 rounded-lg" placeholder="Telefono" type="text" id="telephone" name="telephone" />
                        <strong class="text-sm font-bold text-red-600	"> </strong>
                    </div>
                <div>
                    <label class="sr-only" for="message">Mensaje</label>
                    <textarea
                        class="w-full p-3 border-2 text-sm border-gray-200 rounded-lg"
                        placeholder="Mensaje"
                        rows="8"
                        id="message"
                        name="message"
                    ></textarea>
                    <strong class="text-sm font-bold text-red-600	"> </strong>
                </div>
                <div class="mt-4">
                    <button
                        type="submit"
                        class="inline-flex items-center justify-center w-full px-5 py-3 text-white bg-black rounded-lg sm:w-auto"
                    >
                        <span class="font-medium"> Enviar </span>
                        <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="w-5 h-5 ml-3"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                        </svg>
                    </button>
                    </div>
                </form>
                </div>
            </div>
            </div>
        </section>
